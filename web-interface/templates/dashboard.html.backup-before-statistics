{% block scripts %}
<script>
// Auto-refresh system information
function loadSystemInfo() {
    fetch('/api/status')
        .then(response => response.json())
        .then(data => {
            const infoDiv = document.getElementById('system-info');
            let timeshiftStatus = 'Unknown';
            let backupStatus = 'Unknown';
            
            if (data.timeshift && data.timeshift.success) {
                timeshiftStatus = `${data.timeshift.snapshots.length} snapshots`;
            }
            
            if (data.backups && data.backups.success) {
                backupStatus = data.backups.output.includes('No backups found') ? 'None' : 'Available';
            }
            
            infoDiv.innerHTML = `
                <div class="row">
                    <div class="col-12">
                        <h6><i class="fas fa-clock text-info"></i> Timeshift</h6>
                        <p class="text-muted small">Status: ${timeshiftStatus}</p>
                    </div>
                    <div class="col-12">
                        <h6><i class="fas fa-archive text-warning"></i> Backups</h6>
                        <p class="text-muted small">Status: ${backupStatus}</p>
                    </div>
                    <div class="col-12">
                        <h6><i class="fas fa-hdd text-success"></i> Storage</h6>
                        <p class="text-muted small">Status: ${data.disk && data.disk.success ? 'OK' : 'Check needed'}</p>
                    </div>
                </div>
            `;
        })
        .catch(error => {
            console.error('Error loading system info:', error);
            const infoDiv = document.getElementById('system-info');
            infoDiv.innerHTML = '<p class="text-muted">Unable to load system info</p>';
        });
}

// Load on page load and refresh every 30 seconds
document.addEventListener('DOMContentLoaded', loadSystemInfo);
setInterval(loadSystemInfo, 30000);
</script>
{% endblock %}
