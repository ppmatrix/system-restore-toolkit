<script>
function refreshSnapshots() {
    location.reload();
}

function confirmDeleteSnapshot(snapshotName) {
    document.getElementById('snapshotToDelete').textContent = snapshotName;
    document.getElementById('deleteSnapshotName').value = snapshotName;
    const modal = new bootstrap.Modal(document.getElementById('deleteSnapshotModal'));
    modal.show();
}

function showSnapshotInfo(snapshotName) {
    // This could be expanded to show detailed snapshot information
    alert(`Snapshot: ${snapshotName}\n\nFor detailed information, use:\nsudo timeshift --list`);
}

function checkTimeshiftStatus() {
    fetch('/api/timeshift-info')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert(`Timeshift Status: ${data.summary}\nSnapshots: ${data.snapshots.length}`);
            } else {
                alert(`Timeshift Status Check Failed: ${data.error || 'Unknown error'}`);
            }
        })
        .catch(error => {
            alert('Error checking Timeshift status: ' + error);
        });
}

function openTimeshiftGUI() {
    alert('To open Timeshift GUI, run: sudo timeshift-gtk\n\nNote: This requires a desktop environment and X11/Wayland display.');
}
</script>
